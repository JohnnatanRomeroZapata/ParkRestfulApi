@model IEnumerable<ParkCore.Models.Dtos.NationalParkDto>

@{ 
    ViewData["Title"] = "Index National Park";
}

<span id="toastrMessagge" class="d-none">@TempData["Message"]</span>

<div class="container">
    <div class="row align-items-center text-center">
        <div class="col-6">
            <h2 class="text-info">National Parks List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-info text-white" asp-controller="NationalPark" asp-action="CreateUpdateNationalPark">
                <i class="fa fa-plus"></i> &nbsp;
                Create National Park
            </a>
        </div>
    </div>

    <hr />

    @{
        if (Model.Count() > 0)
        {
            <table id="tableData" class="table table-striped table-bordered mt-2">
                <thead>
                    <tr class="text-center">
                        <th class="col-4">Name</th>
                        <th class="col-4">State</th>
                        <th class="col-4">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var np in @Model)
                        {
                            <tr>
                                <td class="col-5">@np.Name</td>
                                <td class="col-5">@np.State</td>
                                <td class="col-2">
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <a class="btn btn-warning" asp-controller="NationalPark" asp-action="CreateUpdateNationalPark" asp-route-id="@np.Id"><i class="fa fa-pen"></i></a>
                                        </div>
                                        <div class="col-6 text-center">
                                            <a class="btn btn-danger" onclick="Delete(@np.Id)"><i class="fa fa-trash"></i></a>
                                        </div>
                                    </div>
                                    
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    }
</div>

@section Scripts{ 
    <script src="~/js/nationalPark.js"></script>
}